#!/usr/bin/env bash
set -e
if [[ ! -d "/home/moka/Desktop/programming/rust/moccacino" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/moka/Desktop/programming/rust/moccacino")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/moka/Desktop/programming/rust/moccacino" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/moka/Desktop/programming/rust/moccacino/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/moka/Desktop/programming/rust/moccacino/.envrc" "/home/moka/Desktop/programming/rust/moccacino/.direnv"/*.rc
